<script>
  import router from "@system.router";
  module.exports = {
    data: {
      zoneName: ''
    },

    onInit() {
      this.$page.setTitleBar({
        text: 'CloudDB Zone',
        textColor: '#1a1a1a',
        backgroundColor: '#f2f2f2',
        menu: false
      })
    },

    setZoneName(e) {
      this.zoneName = e.value;
    },

    async confirmFunc() {
      await this.$app.$def.cloudDBOperate.openCloudDBZone(this.zoneName);
      router.push({
        uri: 'Page_Main/Page_MM'
      });
    }
  };
</script>
