<template>
  <div class="container">
    <div class="page-title-wrap">
      <text class="page-title">open CloudDB Zone</text>
    </div>

    <div class="newInfo">
      <div class="itemsCon">
        <text class="leftLabel">zone name:</text>
        <div class="containDiv">
          <input class="inputPlaceholder" value="{{zoneName}}" @change="setZoneName"></input>
