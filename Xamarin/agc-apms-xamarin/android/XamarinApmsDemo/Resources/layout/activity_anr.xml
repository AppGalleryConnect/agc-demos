<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When you press the Create ANR Exception , the application frontend will stop and ANR Exception will occur when you take any action."
        android:textColor="@color/colorPrimaryText"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/btnCreateAnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create ANR Exception"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:textColor="@color/colorTextIcons"
        android:textAllCaps="false"
        android:padding="8dp"
        
        />

</LinearLayout>
